mixin search(data)
	- data = data || {}
	- data.class = data.class || ''

	.search.js-search(class=data.class)&attributes(attributes)
		.container
			.search__box
				.search-input
					label.sr-only(for="search-input") Search post
					input#search-input.js-search-input.search-input__input.form-control(type='search' name='search-input' placeholder='Search...' aria-label='Search input')
					button.search-input__btn.js-close-search.reset(aria-label="Close search")
						svg.icon(xmlns='http://www.w3.org/2000/svg' viewBox='0 0 512 512')
							title Close
							path(d='M289.94 256l95-95A24 24 0 00351 127l-95 95-95-95a24 24 0 00-34 34l95 95-95 95a24 24 0 1034 34l95-95 95 95a24 24 0 0034-34z')

